<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/class_speaker_setting5_dialog_width"
    android:layout_height="@dimen/class_speaker_setting5_dialog_height"
    android:layout_centerInParent="true"
    android:background="@drawable/class_speaker_setting5_dialog_shape">

    <TextView
        android:id="@+id/tv_title"
        fontPath="@string/font_path_cctyt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/class_speaker_setting5_dialog_title_margin_top"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="@dimen/class_speaker_setting2_title_line_margin_left"
        android:textColor="@color/class_speaker_setting1_status_color"
        android:textSize="@dimen/class_speaker_setting1_content_text_size" />

    <LinearLayout
        android:id="@+id/ll_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/class_speaker_setting4_edit_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

    </LinearLayout>

</RelativeLayout>

