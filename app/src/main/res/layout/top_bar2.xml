<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/banner"
    android:gravity="center"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/bbtree_icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:paddingStart="@dimen/top_bar_frame_start"
        android:scaleType="fitStart"
        android:src="@mipmap/logo2" />

    <TextView
        android:id="@+id/school_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:singleLine="true"
        android:text="百仕达乐乎幼儿园"
        android:textColor="#a9cb66"
        android:textSize="@dimen/top_bar_title_size" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:gravity="end|center_vertical">

        <ImageView
            android:id="@+id/iv_unitbroadcast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@mipmap/unitbroadcast" />

        <ImageView
            android:id="@+id/temp_device_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@mipmap/temp_searching2" />

        <ImageView
            android:id="@+id/network_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            />
    </LinearLayout>
</LinearLayout>