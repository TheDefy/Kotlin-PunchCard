<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_go_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="50dp"
        android:text="@string/str_to_work" />

    <Button
        android:id="@+id/btn_out_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="50dp"
        android:text="@string/str_out_work" />

    <Button
        android:id="@+id/btn_punch_card_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_out_work"
        android:layout_centerHorizontal="true"
        android:text="@string/str_time" />

    <Button
        android:id="@+id/btn_punch_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_punch_card_time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="@string/str_punch_card" />
</RelativeLayout>
