<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        style="@style/user_info_port_linear_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/user_info_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top">

            <ImageView
                android:id="@+id/user_avatar"
                style="@style/card_holder_avatar"
                android:src="@mipmap/baby_face_default" />

            <TextView
                android:id="@+id/user_level"
                style="@style/card_holder_avatar_level"
                android:layout_gravity="end|bottom"
                android:text="LV15" />

            <ImageView
                android:id="@+id/user_vip"
                style="@style/card_holder_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_marginEnd="@dimen/user_info_img_vip_end"
                android:layout_marginStart="@dimen/user_info_img_vip_start"
                android:adjustViewBounds="true"
                android:src="@mipmap/icon_vip" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/card_holder_name"
                style="@style/card_holder_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="王小智" />


            <ImageView
                android:id="@+id/placeholder"
                style="@style/user_info_img_style"
                android:background="@color/grey"
                android:baselineAlignBottom="true" />

            <ImageView
                android:id="@+id/flower_icon"
                style="@style/card_holder_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/user_info_img_flower_end"
                android:layout_marginStart="@dimen/user_info_img_flower_start"
                android:src="@mipmap/icon_flower" />

            <TextView
                android:id="@+id/flower_score"
                style="@style/card_holder_flower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="10202020" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:src="@mipmap/cartoon_partner" />
    </LinearLayout>
</merge>