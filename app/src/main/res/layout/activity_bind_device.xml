<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_device_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="35dp">

    <TextView
        android:id="@+id/tv_register_tip"
        style="@style/no_sign_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                style="@style/no_sign_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_register_filed_version_name" />

            <TextView
                android:id="@+id/tv_versionName"
                style="@style/no_sign_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow>

            <TextView
                style="@style/no_sign_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_register_filed_device_id" />

            <TextView
                android:id="@+id/tv_device_id"
                style="@style/no_sign_tip"
                fontPath="fonts/DejaVuSerif.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </TableRow>
    </TableLayout>


    <ImageView
        android:id="@+id/iv_qrcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp" />
</LinearLayout>